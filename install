#!/usr/bin/env bash

# bin files
# =========
BASE_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
ln -s $BASE_DIR/bin/* /usr/local/bin/

# Make ~/.git-templates
mkdir -p ~/.git-templates/
cp -R ./dotfiles/git-templates/ ~/.git-templates/

# Build ~/.vim directory
rm -rf ~/.vim
mkdir -p ~/.vim/bundle
git clone https://github.com/gmarik/vundle.git ~/.vim/bundle/vundle

echo ""
echo ""
echo "Post-install message:"
echo "Ensure you have a http://gitpic.io API key in ~/.gitpic-api-key"
echo "Open vim and run :BundleInstall"
